{{#with content}}
  <fieldset>
      <legend>New Project</legend>
        <div class="row collapse">
        <div class="two columns"><label class="inline">Code</label></div>
        <div class="ten columns">{{view Ember.TextField valueBinding="code" id="code" placeholder="Code" required="true"}}</div>
      </div>
      <div class="row collapse">
        <div class="two columns"><label class="inline">Name</label></div>
        <div class="ten columns">{{view Ember.TextField valueBinding="name" id="name" placeholder="Name" required="true"}}</div>
      </div>

      <label>Description</label>
      {{view Ember.TextArea valueBinding="description" id="description" placeholder="Description"}}
  </fieldset>
  <div class="row collapse">
    {{submitButton "Create"}}
    <a class="secondary button" {{action cancelNew}}>Cancel</a>
  </div>
{{/with}}